<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvNama"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvNama2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:drawableTint="#2C877C"
            android:paddingHorizontal="16dp"
            android:text="Nama :"
            />
        <TextView
            android:id="@+id/tvNama2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvNama"
            app:layout_constraintTop_toTopOf="@id/tvNama"
            app:layout_constraintBottom_toBottomOf="@id/tvNama"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nama disini"
            android:textSize="24sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clNama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvDate"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:drawableTint="#2C877C"
            android:paddingHorizontal="16dp"
            android:text="Tanggal Lahir :"
            />
        <TextView
            android:id="@+id/tvDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="@id/tvDate"
            app:layout_constraintBottom_toBottomOf="@id/tvDate"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="TTL disini"
            android:textSize="24sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clKode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvKode"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvKode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:drawableTint="#2C877C"
            android:paddingHorizontal="16dp"
            android:text="Kode :"
            />
        <TextView
            android:id="@+id/tvKode2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvKode"
            app:layout_constraintTop_toTopOf="@id/tvKode"
            app:layout_constraintBottom_toBottomOf="@id/tvKode"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Kode disini"
            android:textSize="24sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_24"
        app:tint="@color/white"
        android:text="share"
        android:drawableEnd="@drawable/ic_share_24"
        app:rippleColor="@color/white"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>